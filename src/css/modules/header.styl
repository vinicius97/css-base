.header
	position absolute
	height 55px
	max-height 55px
	padding 0px
	left 0px
	right 0px
	top 0px
	margin auto
	background $main-color
	text-align center
	z-index 999
	box-shadow 0 1px 10px 0 rgba(50,50,50,.2)
	
	.logo
		position relative
		padding 5px
		width 250px
		overflow hidden
		min-height 55px
		margin-left 15px
		img
			width 190px
			margin auto
			position absolute
			top 0
			left 18px
			bottom 0
				
		.logo
		.link
		.img
			color #333
			max-height 33px
	
	@media screen and (max-width: 1024px)
		.logo
			position relative
			padding 5px
			width calc(100% - 145px)
			max-width 250px
			overflow hidden
			min-height 55px
			img
				width 100%
				max-width 190px
				margin auto
				position absolute
				top 0
				left 2px
				bottom 0
					
			.logo
			.link
			.img
				color #333
				max-height 33px
	.timer
		width 300px
		left 0
		right 0
		margin auto
		padding 5px
		color #fff
		text-align center
		position absolute
		z-index 1
	.user
		position absolute
		right 8px
		.menu
			color #333
		.ul
		.li
		.a
			color #333
	.user
		&-icon
			background $main-color
			border-radius 100%
			height 30px
			width 30px
			float left
			padding 0px
			border 2px solid rgba(255, 255, 255, 0.28)
			img
				max-width 100%
		&-name
			margin-top 4px
			margin-left 5px
			float left
			
		@media screen and (max-width: 1024px)
			&-name
				display none
			
[data-menu-expanded='true']
	.header
		left 0px